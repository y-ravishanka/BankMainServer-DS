                                            </div>

                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="card mt-2">

                                            <div class="card-header">
                                                Location Informations
                                            </div>

                                            <div class="card-body">
                                                <table>

                                                    <tr>
                                                        <td>Province </td>
                                                        <td>
                                                            <select class="ms-3 px-1 my-1 py-1" style="width:300px;" @onchange="ChangeSelectProvince">
                                                                <option selected disabled>-- select a province --</option>
                                                                @for(int i=0;i<province.Count;++i)
                                                                {
                                                                    <option value="@i">@province[i]</option>
                                                                }
                                                            </select>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Distric </td>
                                                        <td>
                                                            <select class="ms-3 px-1 my-1 py-1" style="width:300px;" @onchange="ChangeSelectDistrict">
                                                                <option selected disabled>-- select a district --</option>
                                                                @for(int i=0;i<district[selectedProvince].Length;++i)
                                                                {
                                                                    <option value="@i">@district[selectedProvince][i]</option>
                                                                }
                                                            </select>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>City </td>
                                                        <td>
                                                            <input class="w3-input ms-3 my-1 px-1" style="width:300px;">
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Address </td>
                                                        <td>
                                                            <input class="w3-input ms-3 my-1 px-1" style="width:300px;">
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Zip Code </td>
                                                        <td>
                                                            <input class="w3-input ms-3 my-1 px-1" style="width:300px;">
                                                            
                                                        </td>
                                                    </tr>

                                                </table>
                                            </div>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="container-fluid item_right">
                                <div>
                                    <button class="search_button">New</button>
                                    <button class="search_button">Save</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    }

            

