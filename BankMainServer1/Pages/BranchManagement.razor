@code {
    List<Branch> branches = new();
    Branch branch = new();
    private string[]? ccss = new string[3];
    private int nav = 0;
    private List<string> province = new();
    private List<string[]> district = new();
    private string[]? selectDistrict;
    private int selectedProvince;
    private int selectedDistrict;
    StoredDataClass storedData = new();

    protected override void OnInitialized()
    {
        province = storedData.GetProvince();
        district = storedData.GetDistrict();
        setNave(0);
    }

    private void click_clear()
    {
        
    }

    private void ChangeSelectProvince(ChangeEventArgs e)
    {
        selectedProvince = Convert.ToInt32(e.Value);
    }

    private void ChangeSelectDistrict(ChangeEventArgs e)
    {
        selectedDistrict = Convert.ToInt32(e.Value);
    }

    private void setNave(int t)
    {
        nav = t;
        setCss(t);
    }

    private void clearCss()
    {
        for(int i=0;i<ccss.Length;++i)
        {
            ccss[i] = null;
        }
    }

    private void setCss(int t)
    {
        clearCss();
        ccss[t] = "background-color: white; color: #212529;";
    }
}